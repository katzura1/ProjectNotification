<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".activityPackage.MenuActivity">

    <ImageView
        android:id="@+id/icon_home"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/button_alarm"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/icon_home"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="ALARM"
        android:textColor="@android:color/white" />
    <Button
        android:id="@+id/button_info"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/button_alarm"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:text="INFO PENYAKIT"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button_edukasi"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/button_info"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="Edukasi Obat"
        android:textColor="@android:color/white" />
    <Button
        android:id="@+id/button_about"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/button_edukasi"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:text="TENTANG"
        android:textColor="@android:color/white" />

</RelativeLayout>